@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model SRS_Game.Models.TeamParticipantsViewModel;

@{
    ViewData["Title"] = @Localizer["Details"];
}
<div class="row">
    <div class="col-8">
        <h1>@Localizer["Team"] - @Localizer["Details"]</h1>
    </div>
    <div class="col-4 align-bottom text-end">
        @Html.ActionLink(@Localizer["Edit"].Value, "Edit", "Teams", new { id = Model.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink(@Localizer["BackToList"].Value, "Index", "Teams", null, new { @class = "btn btn-primary" })
        @*<a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary mr-3">@Localizer["Edit"]</a>
        <a asp-action="Index" class="btn btn-primary">@Localizer["Back to List"]</a>*@
    </div>
</div>
<hr />
<div class="w-100">
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.Name)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.Number)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>
    <h5>@Localizer["Team members"]</h5>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>@Localizer[Html.DisplayNameFor(model => model.Name)]</th>
            <th>@Localizer["Stakholder Fullname"]</th>
            <th>@Localizer["Email"]</th>
        </tr>
        @foreach (var member in Model.Members)
        {
            <tr>
                <td scope="col">@member.Id</td>
                <td scope="col">@member.Name</td>
                <td scope="col">@member.FirstName @member.LastName</td>
                <td scope="col">@member.Email</td>
            </tr>
        }
    </table>
</div>
