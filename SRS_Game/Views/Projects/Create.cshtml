@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model SRS_Game.Models.Project

@{
    ViewData["Title"] = Localizer["Create a new project"];
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-4">@Localizer["Name"]</label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Number" class="col-sm-4">@Localizer["Number"]</label>
                <div class="col-sm-8">
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="ProjectManagerId" class="col-sm-4">@Localizer["Project manager"]</label>
                <div class="col-sm-8">
                    <select asp-for="ProjectManagerId" class="form-control" asp-items="ViewBag.Participants"></select>
                    <span asp-validation-for="ProjectManagerId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="@Localizer["Add"]" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">@Localizer["Back to List"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
