@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model SRS_Game.Models.Project

@{
    ViewData["Title"] = @Localizer["Add a new project"];

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-8">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-4 align-bottom text-end">
        <input type="submit" value=@Localizer["Add"] form="create-form" class="btn btn-primary mr-3" />
        @Html.ActionLink(@Localizer["BackToList"].Value, "Index", "Projects", null, new { @class = "btn btn-primary" })
    </div>
</div>
<hr />
@if (ViewBag.Message != null)
{
    <div class="alert alert-@ViewBag.Message.Type" role="alert">
        @ViewBag.Message.Text
    </div>
}
<div class="row">
    <div class="col-sm-6">
        <form id="create-form" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-4">@Localizer["Name"]</label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Number" class="col-sm-4">@Localizer["Number"]</label>
                <div class="col-sm-8">
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="ProjectManagerId" class="col-sm-4">@Localizer["Project manager"]</label>
                <div class="col-sm-8">
                    <select asp-for="ProjectManagerId" class="form-control" asp-items="ViewBag.Participants">
                        <option value="">@Localizer["-- Select an option --"]</option>
                    </select>
                    <span asp-validation-for="ProjectManagerId" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
