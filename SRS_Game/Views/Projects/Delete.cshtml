@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

    @model SRS_Game.Models.ProjectsViewModel;

@{
    ViewData["Title"] = @Localizer["Delete"];
}
<div class="row">
    <div class="col-8">
        <h1>@Localizer["Delete"] - "@Model.Name (@Model.Number)"</h1>
        <h3>@Localizer["Asking"]?</h3>
    </div>
</div>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.Name)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.Number)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.CreatedDate)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.UpdateDate)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdateDate)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.ProjectManager)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectManager)
        </dd>
    </dl>
</div>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary ms-2">@Localizer["BackToList"]</a>
        </form>
    </div>
</div>