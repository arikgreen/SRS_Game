@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model MeetingHistoryFile

@{
    ViewData["Title"] = "Upload Meeting Transcript File";
}

@section Styles {
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
}

<div class="container">
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card p-3">
                <div class="message">@ViewBag.Message</div>
                <h2>@Localizer["Upload File"]</h2>
                @using (Html.BeginForm("UploadFilePost", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "was-validated" }))
                {
                    <div class="input-group mb-3">
                        <div class="form-check form-check-inline m-">
                            @Html.RadioButtonFor(m => m.FileSourceType, 0, new { @class = "form-check-input" })
                            @Html.Label("FileSourceType", "MS Teams", new { @class = "form-check-label", @checked = "checked" })
                        </div>
                        <div class="form-check form-check-inline m-">
                            @Html.RadioButtonFor(m => m.FileSourceType, 1, new { @class = "form-check-input" })
                            @Html.Label("FileSourceType", "Zoom", new { @class = "form-check-label" })
                        </div>
                    </div>
                    <div class="mb-3 mt-3">
                        @Html.TextBox("file", "", new { type = "file", @class = "form-control", @required = "required" })
                        <div class="valid-feedback">@Localizer["Valid"].</div>
                        <div class="invalid-feedback">@Localizer["Please fill out this field"].</div>
                    </div>
                    <button type="submit" class="btn btn-primary">@Localizer["Upload"]</button>
                }
            </div>
        </div>
    </div>
</div>
