@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model SRS_Game.Models.AttachementViewModel;

@{
    ViewData["Title"] = @Localizer["Delete"];
}
<div class="row">
    <div class="col-8">
        <h1>@Localizer["Delete"] - "@Model.FileName"</h1>
        <h3>@Localizer["Asking"]?</h3>
    </div>
</div>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.Document)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Document)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.FileName)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.ContentType)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContentType)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.CreatedDate)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.UpdatedDate)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
</div>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary ms-2">@Localizer["BackToList"]</a>
        </form>
    </div>
</div>