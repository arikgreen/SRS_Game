@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model IEnumerable<SRS_Game.Models.Attachement>;

@{
    ViewData["Title"] = Localizer["Attachements"];
}

<h1>@ViewData["Title"]</h1>

<p><a asp-action="Create">@Localizer["Add New"] @Localizer["Document"]</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.DocumentId)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.FileName)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.ContentType)]
            </th>
            <th class="text-end">
                @Localizer[Html.DisplayNameFor(model => model.CreateDate)]
            </th>
            <th class="text-end">
                @Localizer[Html.DisplayNameFor(model => model.UpdateDate)]
            </th>
            <th class="text-center">@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContentType)
            </td>
            <td class="text-end">
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td class="text-end">
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary mr-3">@Localizer["Edit"]</a>
                <a asp-action="Details" asp-route-id="@item.Id" nt="@item.Id" class="btn btn-sm btn-primary mr-3">@Localizer["Details"]</a>
                <a asp-action="Delete" asp-route-id="@item.Id" nt="@item.Id" class="btn btn-sm btn-primary mr-3">@Localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
