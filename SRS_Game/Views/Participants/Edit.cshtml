@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model SRS_Game.Models.Participant;

@{
    ViewData["Title"] = Localizer["Edit"];
}

<h4>@Localizer["Participant"] - @Localizer["Edit"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-4 col-form-label">@Localizer["Name"]</label>
                <div class="col-sm-8"><input asp-for="Name" class="form-control" /></div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="FirstName" class="col-sm-4 col-form-label">@Localizer["First name"]</label>
                <div class="col-sm-8"><input asp-for="FirstName" class="form-control" /></div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="LastName" class="col-sm-4 col-form-label">@Localizer["Last name"]</label>
                <div class="col-sm-8"><input asp-for="LastName" class="form-control" /></div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="PhoneNumber" class="col-sm-4 col-form-label">@Localizer["Phone number"]</label>
                <div class="col-sm-8"><input asp-for="PhoneNumber" class="form-control" /></div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="TypeId" class="col-sm-4 col-form-label">@Localizer["Type"]</label>
                <div class="col-sm-8"><input asp-for="TypeId" class="form-control" /></div>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Address" class="col-sm-4 col-form-label">@Localizer["Address"]</label>
                <div class="col-sm-8"><textarea asp-for="Address" class="form-control" rows="3"></textarea></div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3 mt-3">
                <input type="submit" value=@Localizer["Save"] class="btn btn-primary" />
                <button asp-action="Details" class="btn btn-primary">@Localizer["Cancel"]</button>
                <button asp-action="Index" class="btn btn-primary ml-3">@Localizer["Back to List"]</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
