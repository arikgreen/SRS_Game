@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model IEnumerable<SRS_Game.Models.ParticipantViewModel>;

@{
    ViewData["Title"] = Localizer["Participants"];
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">@Localizer["Add New Participant"]</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Name)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.FirstName)]
            </th>
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.LastName)]
            </th>
            <th class="text-center">
                @Localizer[@Html.DisplayNameFor(model => model.Email)]
            </th>
            <th class="text-center">
                @Localizer[@Html.DisplayNameFor(model => model.PhoneNumber)]
            </th>
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.Type)]
            </th>
            <th class="text-center">@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
                <td class="text-end">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary mr-3">@Localizer["Edit"]</a>
                <a asp-action="Details" asp-route-id="@item.Id" nt="@item.Id" class="btn btn-sm btn-primary mr-3">@Localizer["Details"]</a>
                <a asp-action="Delete" asp-route-id="@item.Id" nt="@item.Id" class="btn btn-sm btn-primary mr-3">@Localizer["Delete"]</a>
            </td>
        </tr>
    }
    </tbody>
    <tfoot></tfoot>
</table>
