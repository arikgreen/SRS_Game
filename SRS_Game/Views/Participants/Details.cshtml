</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary mr-5">@Localizer["Edit"]</a>
    <a asp-action="Index" class="btn btn-primary">@Localizer["Back to List"]</a>
</div>
