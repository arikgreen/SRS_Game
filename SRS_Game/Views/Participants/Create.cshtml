@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model SRS_Game.Models.Participant;

@{
    ViewData["Title"] = @Localizer["Add a new stakholder"];
}
<div class="row">
    <div class="col-8">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-4 align-bottom text-end">
        <input type="submit" value=@Localizer["Add"] form="create-form" class="btn btn-primary mr-3" />
        @Html.ActionLink(@Localizer["BackToList"].Value, "Index", "Participants", null, new { @class = "btn btn-primary" })
    </div>
</div>
<hr />
@if (ViewBag.Message != null)
{
    <div class="alert alert-@ViewBag.Message.Type" role="alert">
        @ViewBag.Message.Text
    </div>
}
<div class="row">
    <div class="col-sm-6">
        <form id="create-form" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row">
                <label asp-for="FirstName" class="col-sm-4 col-form-label">@Localizer[Html.DisplayNameFor(model => model.FirstName)]</label>
                <div class="col-sm-8">
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="LastName" class="col-sm-4 col-form-label">@Localizer[Html.DisplayNameFor(model => model.LastName)]</label>
                <div class="col-sm-8">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-4 col-form-label">@Localizer[Html.DisplayNameFor(model => model.Name)]</label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Email" class="col-sm-4 col-form-label">@Localizer[Html.DisplayNameFor(model => model.Email)]</label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="PhoneNumber" class="col-sm-4 col-form-label">@Localizer[Html.DisplayNameFor(model => model.PhoneNumber)]</label>
                <div class="col-sm-8">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Address" class="col-sm-4 col-form-label">@Localizer[Html.DisplayNameFor(model => model.Address)]</label>
                <div class="col-sm-8">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="IsExternal" class="col-sm-4 col-form-label">@Localizer[@Html.DisplayNameFor(model => model.IsExternal)]</label>
                <div class="col-sm-8">
                    <input class="form-check-inline mt-2" asp-for="IsExternal" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
