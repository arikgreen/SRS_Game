@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model SRS_Game.Models.UserIndexViewModel;

@{
    ViewData["Title"] = @Localizer["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-8">
        <h1>@Localizer["Delete"] - "@Model.Login"</h1>
        <h3>@Localizer["Asking"]?</h3>
    </div>
</div>
<hr />
<div class="row">
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.FirstName)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.LastName)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.Login)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.Email)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.PhoneNumber)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.Roles)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Roles)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary ms-2">@Localizer["BackToList"]</a>
    </form>
</div>
