@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model IEnumerable<SRS_Game.Models.Document>

@{
    // var documents = ViewData["Document"] as SRS_Game.Models.Document;
    // var projects = ViewData["Project"] as SRS_Game.Models.Project;
    // var user = ViewData["User"] as SRS_Game.Models.User;
}

@{
    ViewData["Title"] = Localizer["Documents"];
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">@Localizer["Create New Document"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Name)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.ProjectId)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Description)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.VersionId)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.UpdateDate)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.AuthorId)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.FileName)]
            </th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VersionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
