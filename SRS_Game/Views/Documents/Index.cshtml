@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model IEnumerable<SRS_Game.Models.DocumentViewModel>;

@{
    ViewData["Title"] = Localizer["Documents"];
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">@Localizer["Add New"] @Localizer["Document"]</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Name)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Project)]
            </th>
            <th class="text-center">
                @Localizer[Html.DisplayNameFor(model => model.Version)]
            </th>
            <th class="text-end">
                @Localizer[Html.DisplayNameFor(model => model.UpdateDate)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Author)]
            </th>
            <th class="text-center">
                @Localizer["Actions"]
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td class="text-end">
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary mr-3">@Localizer["Edit"]</a>
                <a asp-action="Details" asp-route-id="@item.Id" nt="@item.Id" class="btn btn-sm btn-primary mr-3">@Localizer["Details"]</a>
                <a asp-action="Delete" asp-route-id="@item.Id" nt="@item.Id" class="btn btn-sm btn-primary mr-3">@Localizer["Delete"]</a>
            </td>
        </tr>
    }
    </tbody>
</table>
