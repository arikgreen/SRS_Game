                            {
                                @for (int i = 0; i < count; i++)
                                {
                                    var reference = @Model.SRS.SystemUsers[@i].Reference.ToLower();
                                    <table id="@reference" class="table table-bordered">
                                        <tbody>
                                            <tr>
                                                <th scope="row" class="w-15 ref"><input class="form-control-plaintext fw-bold" asp-for="@Model.SRS.SystemUsers[@i].Reference" readonly /></th>
