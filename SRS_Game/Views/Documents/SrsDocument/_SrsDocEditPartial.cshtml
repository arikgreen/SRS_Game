                                            <tr>
                                                <th scope="row">@Localizer["Description"]:</th>
                                                <td><input class="form-control" placeholder="@Localizer["Otwarcie nowego kanału sprzedaży"]" asp-for="@Model.SRS.BusinesPurposes[@i].Description" /></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">@Localizer["Source"]:</th>
                                                <td><input class="form-control" placeholder="@Localizer["StakeholderReference"]" asp-for="@Model.SRS.BusinesPurposes[@i].Source" /></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">@Localizer["Priority"]:</th>
